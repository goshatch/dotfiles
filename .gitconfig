[user]
  name = Gosha Tcherednitchenko
  email = git@gosha.net
	signingKey = /Users/gosha/.ssh/id_rsa.pub
[alias]
  st = status -sb
  ci = commit -v
  s = stage
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
  unstage = reset HEAD --
  find = grep -2 -n --heading
  # Mark a repo as trusted
  trust = "!mkdir -p .git/safe"
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  quotepath = false
  precomposeunicode = true
  excludesfile = /Users/gosha/.gitignore_global
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetuprebase = always
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[heroku]
  account = personal
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[merge]
  conflictstyle = diff3
[sendmail]
  smtpserver = /usr/bin/msmtp
  smtpserveroption = -a
  smtpserveroption = fastmail
[github]
  user = goshatch
[init]
  defaultBranch = main

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations
  syntax-theme = DarkNeon
  line-numbers = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

[includeIf "gitdir:~/repos/indeed/"]
  path = .gitconfig-indeed
[gpg]
	format = ssh
